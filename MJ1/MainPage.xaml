<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MJ1"
             x:Class="MJ1.MainPage">

    <Grid RowDefinitions="*,Auto,Auto" RowSpacing="10" >
        <CollectionView Grid.Row ="0" x:Name="TilesCollectionView" 
                        HorizontalOptions="Center"
                        VerticalOptions="Start"
                        ItemsSource="{Binding HandTiles.Images}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Horizontal" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.GestureRecognizers>
                            <PanGestureRecognizer PanUpdated="OnPanUpdated"/>
                        </Grid.GestureRecognizers>
                        <Image WidthRequest="50" HeightRequest="70" Aspect="AspectFit" Source="Back1.png" />
                        <Image WidthRequest="40" HeightRequest="60" Margin="0,10,10,0" Aspect="AspectFit" Source="{Binding .}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <StackLayout Grid.Row="1" HeightRequest="40" HorizontalOptions="Center" Orientation="Horizontal" Spacing="10">
            <Label FontSize="20" Text="筒" />
            <Entry WidthRequest="50" FontSize="20" Text="{Binding TongCount}" />
            <Label FontSize="20" Text="条" />
            <Entry WidthRequest="50" FontSize="20" Text="{Binding TiaoCount}" />
            <Label FontSize="20" Text="万" />
            <Entry WidthRequest="50" FontSize="20" Text="{Binding WanCount}" />
            <Label Margin="30,0,30,0" FontSize="20" Text="{Binding TotalTiles}" />
            <Button WidthRequest="60" Text="444" Command="{Binding DrawCommand}" CommandParameter="4,4,4" />
            <Button WidthRequest="60" Text="555" Command="{Binding DrawCommand}" CommandParameter="5,5,5" />
            <Button WidthRequest="60" Text="8/6" Command="{Binding DrawCommand}" CommandParameter="8,6,0" />
            <Button WidthRequest="60" Text="10/4" Command="{Binding DrawCommand}" CommandParameter="10,4,0" />
            <Button WidthRequest="60" Text="13" Command="{Binding DrawRandomCommand}" CommandParameter="13"/>
            <Button WidthRequest="60" Text="14" Command="{Binding DrawRandomCommand}" CommandParameter="14"/>
        </StackLayout>

        <StackLayout Grid.Row="2" HeightRequest="40" HorizontalOptions="Center" Orientation="Horizontal">
            <Label Margin="0,0,20,0" FontAttributes="Bold" FontSize="16" TextColor="{Binding ScoreLabelColor1}" Text="{Binding ScoreLabel1}" />
            <Label Margin="0,0,20,0" FontAttributes="Bold" FontSize="16" TextColor="{Binding ScoreLabelColor2}" Text="{Binding ScoreLabel2}" />
            <Label Margin="0,0,20,0" FontAttributes="Bold" FontSize="16" TextColor="{Binding ScoreLabelColor3}" Text="{Binding ScoreLabel3}" />

            <Label Margin="0,0,20,0" FontAttributes="Bold" FontSize="16" TextColor="{Binding WinLabelColor}" Text="{Binding WinLabel}" />
        </StackLayout>
    </Grid>
</ContentPage>


